{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "types": ["node"],
    "paths": {
      "#src/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["./**/*.ts"],
  "extensions": [".ts"]
}
